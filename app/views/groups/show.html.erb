<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Group detail</h2>
      <table class="table show">
        <%= render 'group_show', group: @group %>
      </table>
      <p><%= link_to "グループ一覧に戻る",groups_path %></p>
      <h2>Group users book</h2>
      <div class="users_book_index">
        <% if @group.users.include?(current_user) %>
          <%= render 'books/index', books: @books %>
        <% else %>
          <%= render 'transmission' %>
        <% end %>
      </div>
    </div>
  </div>
</div>