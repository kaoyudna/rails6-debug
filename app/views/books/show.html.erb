<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td>
            <% if @book.favorited_by?(current_user) %>
              <%= link_to book_favorites_path(@book), method: :delete, class:"text-danger" do %>
                ♥<%= @book.favorites.count %>
              <% end %>
            <% else %>
              <%= link_to book_favorites_path(@book), method: :post, class:"text-primary" do %>
                ♥<%= @book.favorites.count %>
              <% end %>
            <% end %>
          </td>
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
        </tr>
      </table>
      <h4>Book comments</h4>
      <table class="table">
          <% @book.book_comments.each do |comment| %>
          <tr>
            <td>
              <%= link_to user_path(comment.user) do %>
                <%= image_tag comment.user.get_profile_image, size:"50x50" %><br>
                <%= comment.user.name %>
              <% end %>
            </td>
            <td><%= comment.comment %></td>
            <td>
              <% if comment.user == current_user %>
                <%= link_to "Destroy", book_book_comment_path(comment.book,comment),method: :delete, class:"btn btn-danger" %>
              <% end %>
            </td>
          </tr>
          <% end %>
      </table>
      <%= form_with model:[@book,@book_comment] do |f| %>
      <div class="form-group">
        <%= f.label :comment %>
        <%= f.text_area :comment, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "送信", class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>